<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PodiumTechinalChallenge" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/colorPrimaryDark</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        <item name="android:textColor">@color/textPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SectionTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:paddingVertical">@dimen/margin16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font18</item>
    </style>

    <style name="RecommendedMovieTextStyle" parent="SectionTextStyle">
        <item name="android:paddingVertical">@dimen/margin8</item>
    </style>

    <style name="MovieDetailTitle" parent="SectionTextStyle">
        <item name="android:paddingVertical">0dp</item>
        <item name="android:textSize">@dimen/font22</item>
    </style>

    <style name="Button.Rounded" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Button.Icon" parent="Widget.Material3.Button.IconButton"/>

    <style name="Button.Outlined" parent="Button.Rounded">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">2dp</item>
        <item name="theme">@style/Widget.Material3.Button.OutlinedButton</item>
    </style>

    <style name="Text.Secondary" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <style name="AppBarLayout" parent="Widget.Design.AppBarLayout">
        <item name="elevation">0.1dp</item>
        <item name="android:background">@color/black_alpha_40</item>
    </style>
</resources>